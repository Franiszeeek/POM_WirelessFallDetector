<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.example.franciszeeek.wirelessfalldetector.MainActivity">

    <TextView
        android:id="@+id/dataValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current value"
        android:textColor="@color/colorTextButton"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/functionality1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorButton"
            android:text="LED ON"
            android:textColor="@color/colorTextButton" />

        <Button
            android:id="@+id/functionality2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorButton"
            android:text="LED OFF"
            android:textColor="@color/colorTextButton"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/functionality3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorButton"
            android:text="Disconnect"
            android:textColor="@color/colorTextButton" />

        <Button
            android:id="@+id/functionality4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorButton"
            android:text="Read"
            android:textColor="@color/colorTextButton"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>
